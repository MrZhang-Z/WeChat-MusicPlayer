swiper{
  /* width: 690rpx; */
  width: 96%;
  margin: 2%;
  height: 400rpx;
}
swiper-item{
  padding-top: 100rpx;
  margin-left: -2%;
}
swiper-item>image{
  width: 275rpx;
  height: 275rpx;
  position: absolute;
  left: 50%;
  margin-left: -130rpx;
  border-radius: 5px;
}
image.active{
  transform: scale(1.14);
  transition:all .2s ease-in 0s;
}

#title{
