/* pages/SingerDetails/SingerDetails.wxss */
/* 主题 */
#SingerDetails{
  width: 96%;
  margin: 2%;
}

/* 歌手图片 */
#image{
  width: 100%;
  height: 100%;
}
#image>image{
  width: 100%;
  height: 300px;
}
#image>text{
  font-size: 25px;
  color: white;
  position: absolute;
  top: 250px;
  left: 30px;
}

/* 歌手歌曲 */
#songs{
  width: 100%;
  height: 100%;
}

/* 歌曲内容 */
#list{
  width: 96%;
  height: 60px;
  background-color: #f3f3f3;
  border-radius: 5px;
  margin: 2%;
}
#list>view>image{
  width: 20px;
  height: 20px;
  margin-top: 20px;
}
#list>view{
  width: 50px;
  height: 50px;
  float: right;
}
#title{
  font-size: 15px;
  margin-left: 15px;
  line-height: 30px;
}
#name{
  font-size: 12px;
  margin-left: 45px;
  position: absolute;
  left: 10px;
}