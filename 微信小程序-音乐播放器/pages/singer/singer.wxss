/* pages/singer/singer.wxss */
/* 顶部标题 */
#title{
  width: 96%;
  height: 50px;
  margin-left: 2%;
}
#title>text{
  font-size: 25px;
  line-height: 50px;
  border-bottom: 3px solid #1cbb9b;
}

/* 主体 */
#singer{
  width: 96%;
  margin: 2%;
  background-color: #f3f3f3;
}

/* 切换按钮 */
#button{
  width: 100%;
  height: 50px;
}
#button>button{
  width: 58px;
  height: 30px;
  font-size: 15px;
  line-height: 30px;
  float: left;
  margin-top: 10px;
  margin-left: 10px;
}

/* 歌手 */
#content{
  width: 100%;
  height: 100%;
}
#content_singer{
  width: 100%;
  height: 80px;
}
/* 歌手图片 */
#content_singer>view>image{
  width: 60px;
  height: 60px;
  float: left;
  border-radius: 50%;
  margin-left: 10px;
  margin-top: 10px;
}
/* 歌手名字 */
#content_singer>view>text{
  font-size: 20px;
  line-height: 80px;
  float: left;
  margin-left: 20px;
}
/* 关注 */
#content_singer>view>button{
  width: 60px;
  height: 24px;
  font-size: 10px;
  margin-top: 28px;
  position: absolute;
  right: 20px;
}