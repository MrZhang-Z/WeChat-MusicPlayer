/* 滑块 */
movable-area{
  width: 670px;
  height: 320px;
}
movable-view{
  width: 700px;
  height: 340px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  margin: 0px;
}


/* 排行榜 */
#leaderboard{
  width: 96%;
  height: 120px;
  background-color: #f0f0f0;
  border-radius: 8px;
  margin: 2%;
}
#leaderboard_title{
  font-size: 18px;
  line-height: 30px;
  float: left;
  width: 62%;
  margin-left: 8px;
  margin-top: 5px;
}
#leaderboard_content{
  height:25px;
  width: 62%;
  float: left;
  margin-left: 8px;
}
#leaderboard_content>text{
  line-height: 26px;
}
#leaderboard_img{
  width: 120px;
  height: 120px;
  /* border: 1px solid green; */
  float: right;
}
#leaderboard_img>image{
  width: 120px;
  height: 120px;
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
}

