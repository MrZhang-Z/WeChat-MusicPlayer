/**index.wxss**/

/* 热门 */
.popular{
  height: 100%;
  width: 98%;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  margin: 20px;
}

/* 榜单 */
.list{
  height: 100%;
  width: 98%;
}

/* 轮播 */
swiper{
  height: 350rpx;
  margin-left: 2%;
}
swiper image{
  width: 98%;
  height: 100%;
}

/* 目录 */
.mulu{
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 96%;
  background-color: #f3f3f3;
  margin-top: 15px;
  border-radius: 10px;
  margin: 2%;
}
.mulu>view{
  width: 22%;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.mulu>view>image{
  width: 60rpx;
  height: 60rpx;
}
.mulu>view>text{
  font-size: 25rpx;
}

/* 顶部标题 */
#title{
  width: 96%;
  height: 50px;
  margin-left: 2%;
}
#title>text{
  font-size: 25px;
  line-height: 50px;
  border-bottom: 3px solid #1cbb9b;
}

/* 模块标题 */
.title{
  width: 100%;
  height: 25px;
  color: #1cbb9b;
  font-size: 20px;
  line-height: 25px;
}

